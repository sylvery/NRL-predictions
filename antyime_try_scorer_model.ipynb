    "class TryScorerFeatures:\n",
    "    \"\"\"Extract and engineer features for try scoring prediction.\"\"\"\n",
    "    \n",
    "    def __init__(self, years):\n",
    "        self.years = years\n",
    "        self.player_stats = defaultdict(lambda: {\n",
    "            'total_tries': 0,\n",
    "            'games_played': 0,\n",
    "            'try_rate': 0.0,\n",
    "            'recent_tries': 0,\n",
    "            'line_breaks': 0,\n",
    "            'tackle_breaks': 0,\n",
    "        })\n",
    "        self.team_stats = defaultdict(lambda: {\n",
    "            'tries_scored': 0,\n",
    "            'tries_conceded': 0,\n",
    "            'games_played': 0,\n",
    "            'avg_points_scored': 0,\n",
    "            'avg_points_conceded': 0,\n",
    "        })\n",
    "        \n",
    "    def calculate_player_try_rate(self, player_name, team, year=None):\n",
    "        \"\"\"Calculate a player's historical try scoring rate.\"\"\"\n",
    "        stats = self.player_stats.get(player_name, {})\n",
    "        games = stats.get('games_played', 0)\n",
    "        if games >= MIN_GAMES_FOR_STAT:\n",
    "            return stats['total_tries'] / games\n",
    "        return 0.0\n",
    "    \n",
    "    def calculate_team_attack(self, team, year=None):\n",
    "        \"\"\"Calculate team's attacking strength.\"\"\"\n",
    "        team_data = self.team_stats.get(team, {})\n",
    "        games = team_data.get('games_played', 1)\n",
    "        return team_data.get('tries_scored', 0) / games if games > 0 else 0\n",
    "    \n",
    "    def calculate_team_defense(self, team, year=None):\n",
    "        \"\"\"Calculate team's defensive strength.\"\"\"\n",
    "        team_data = self.team_stats.get(team, {})\n",
    "        games = team_data.get('games_played', 1)\n",
    "        return team_data.get('tries_conceded', 0) / games if games > 0 else 0\n",
    "    \n",
    "    def create_match_features(self, match_data, home_team, away_team, round_num):\n",
    "        \"\"\"Create feature vector for a match.\"\"\"\n",
    "        features = {\n",
    "            'home_team_attack': self.calculate_team_attack(home_team),\n",
    "            'home_team_defense': self.calculate_team_defense(home_team),\n",
    "            'away_team_attack': self.calculate_team_attack(away_team),\n",
    "            'away_team_defense': self.calculate_team_defense(away_team),\n",
    "            'home_advantage': 1.0,\n",
    "            'round': round_num,\n",
    "            'attack_diff': self.calculate_team_attack(home_team) - self.calculate_team_defense(away_team),\n",
    "            'defense_diff': self.calculate_team_defense(home_team) - self.calculate_team_attack(away_team),\n",
    "        }\n",
    "        return features\n",
    "\n",
    "print(\"‚úÖ TryScorerFeatures class defined\")"
   ]
  },
