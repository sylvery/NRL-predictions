    "\n",
    "logger.info(f\"Configuration: Year={YEAR}, Competition={COMPETITION_ID}, Round={CURRENT_ROUND}\")\n",
    "print(f\"üìÖ Looking at Round {CURRENT_ROUND} of {YEAR}\")"
