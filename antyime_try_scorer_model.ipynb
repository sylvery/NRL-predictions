    "def extract_try_scorers(detailed_data):\n",
    "    \"\"\"Extract all try scorers from detailed match data.\"\"\"\n",
    "    try_scorers = []\n",
    "    \n",
    "    if detailed_data and 'NRL' in detailed_data:\n",
    "        for round_data in detailed_data['NRL']:\n",
    "            for match_name, match_info in round_data.items():\n",
    "                if 'home' in match_info and 'away' in match_info:\n",
    "                    home_team = match_info.get('home_team', '')\n",
    "                    away_team = match_info.get('away_team', '')\n",
    "                    \n",
    "                    # Extract home team try scorers\n",
    "                    home_data = match_info['home']\n",
    "                    if 'try_names' in home_data:\n",
    "                        for scorer in home_data['try_names']:\n",
    "                            try_scorers.append({\n",
    "                                'player': scorer,\n",
    "                                'team': home_team,\n",
    "                                'opponent': away_team,\n",
    "                                'is_home': True\n",
    "                            })\n",
    "                    \n",
    "                    # Extract away team try scorers\n",
    "                    away_data = match_info['away']\n",
    "                    if 'try_names' in away_data:\n",
    "                        for scorer in away_data['try_names']:\n",
    "                            try_scorers.append({\n",
    "                                'player': scorer,\n",
    "                                'team': away_team,\n",
    "                                'opponent': home_team,\n",
    "                                'is_home': False\n",
    "                            })\n",
    "    \n",
    "    return try_scorers\n",
    "\n",
    "\n",
    "# Process all years\n",
    "all_try_scorers = []\n",
    "feature_engine = TryScorerFeatures(YEARS_TO_ANALYSE)\n",
    "\n",
    "for year in YEARS_TO_ANALYSE:\n",
    "    logger.info(f\"Processing year {year}...\")\n",
    "    detailed_data = load_detailed_match_data(year)\n",
    "    \n",
    "    if detailed_data:\n",
    "        year_scorers = extract_try_scorers(detailed_data)\n",
    "        all_try_scorers.extend(year_scorers)\n",
    "        logger.info(f\"  Found {len(year_scorers)} try scorers in {year}\")\n",
    "\n",
    "logger.info(f\"\\nüìä Total try scorers extracted: {len(all_try_scorers)}\")"
   ]
