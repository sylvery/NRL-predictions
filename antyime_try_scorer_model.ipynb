    "def analyze_try_scorer_stats(try_scorers):\n",
    "    \"\"\"Analyze try scorer statistics.\"\"\"\n",
    "    from collections import Counter\n",
    "    \n",
    "    # Count tries per player\n",
    "    player_try_counts = Counter()\n",
    "    for scorer in try_scorers:\n",
    "        player_try_counts[scorer['player']] += 1\n",
    "    \n",
    "    # Top try scorers\n",
    "    top_scorers = player_try_counts.most_common(20)\n",
    "    \n",
    "    # Team try distribution\n",
    "    team_try_counts = Counter()\n",
    "    for scorer in try_scorers:\n",
    "        team_try_counts[scorer['team']] += 1\n",
    "    \n",
    "    return {\n",
    "        'top_scorers': top_scorers,\n",
    "        'team_distribution': team_try_counts,\n",
    "        'total_unique_scorers': len(player_try_counts)\n",
    "    }\n",
    "\n",
    "\n",
    "# Analyze\n",
    "stats = analyze_try_scorer_stats(all_try_scorers)\n",
    "\n",
    "print(\"\\nüèÜ Top 10 Try Scorers:\")\n",
    "print(\"-\" * 40)\n",
    "for i, (player, tries) in enumerate(stats['top_scorers'][:10], 1):\n",
    "    print(f\"{i:2}. {player:<25} {tries:3} tries\")\n",
    "\n",
    "print(f\"\\nüìä Total unique try scorers: {stats['total_unique_scorers']}\")"
   ]
