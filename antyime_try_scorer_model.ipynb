    "from sklearn.model_selection import train_test_split\n",
    "from sklearn.ensemble import RandomForestClassifier, GradientBoostingClassifier\n",
    "from sklearn.linear_model import LogisticRegression\n",
    "from sklearn.metrics import classification_report, accuracy_score, roc_auc_score\n",
    "from sklearn.preprocessing import StandardScaler\n",
    "import warnings\n",
    "warnings.filterwarnings('ignore')\n",
    "\n",
    "print(\"‚úÖ ML libraries imported\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "def prepare_training_data(try_scorers, player_stats, team_stats):\n",
    "    \"\"\"\n",
    "    Prepare training data for the try scorer model.\n",
    "    \n",
    "    This is a simplified version - in production, you'd need\n",
    "    player-specific features and more granular match data.\n",
    "    \"\"\"\n",
    "    X = []\n",
    "    y = []\n",
    "    \n",
    "    # Calculate team-level features for each try\n",
    "    for scorer in try_scorers:\n",
    "        team = scorer['team']\n",
    "        opponent = scorer['opponent']\n",
    "        \n",
    "        team_data = team_stats.get(team, {'tries_scored': 0, 'games_played': 1})\n",
    "        opp_data = team_stats.get(opponent, {'tries_conceded': 0, 'games_played': 1})\n",
    "        \n",
    "        features = [\n",
    "            team_data.get('tries_scored', 0) / max(team_data.get('games_played', 1), 1),  # Team try rate\n",
    "            opp_data.get('tries_conceded', 0) / max(opp_data.get('games_played', 1), 1),  # Opponent try conceded\n",
",
    "            1.0 if scorer['is_home'] else 0.0,  # Home advantage\n",
    "            team_data.get('avg_points_scored', 0) / 20,  # Normalize\n",
    "            team_data.get('avg_points_conceded', 0) / 20,  # Normalize\n",
    "        ]\n",
    "        \n",
    "        X.append(features)\n",
    "        y.append(1)  # All samples scored a try\n",
    "    \n",
    "    return np.array(X), np.array(y)\n",
    "\n",
    "\n",
    "# Create sample negative samples (players who didn't score)\n",
    "def create_balanced_dataset(X_positive, n_negatives=5000):\n",
    "    \"\"\"Create balanced dataset with negative samples.\"\"\"\n",
    "    np.random.seed(42)\n",
    "    \n",
    "    # Generate negative samples (random features)\n",
    "    X_negative = np.random.randn(n_negatives, X_positive.shape[1]) * 0.3 + 0.2\n",
    "    y_negative = np.zeros(n_negatives)\n",
    "    \n",
    "    # Combine\n",
    "    X = np.vstack([X_positive, X_negative])\n",
    "    y = np.concatenate([np.ones(len(X_positive)), y_negative])\n",
    "    \n",
    "    return X, y\n",
    "\n",
    "print(\"‚úÖ Data preparation functions defined\")"
   ]
  },
  {
   "cell_type": "code",
