    "def get_betting_insights(matches):\n",
    "    \"\"\"Generate betting insights for upcoming matches.\"\"\"\n",
    "    print(\"\\n\" + \"=\"*70)\n",
    "    print(\"üé∞ BETTING INSIGHTS\")\n",
    "    print(\"=\"*70 + \"\\n\")\n",
    "    \n",
    "    high_confidence = []\n",
    "    close_matches = []\n",
    "    \n",
    "    for match in matches:\n",
    "        pred = get_match_prediction(match['home_team'], match['away_team'])\n",
    "        \n",
    "        if pred['confidence'] >= 7:\n",
    "            high_confidence.append({\n",
    "                **match,\n",
    "                **pred\n",
    "            })\n",
    "        elif pred['confidence'] <= 4:\n",
    "            close_matches.append({\n",
    "                **match,\n",
    "                **pred\n",
    "            })\n",
    "    \n",
    "    print(\"üî• HIGH CONFIDENCE PICKS (Confidence >= 7):\")\n",
    "    print(\"-\" * 50)\n",
    "    if high_confidence:\n",
    "        for m in high_confidence:\n",
    "            print(f\"  {m['home_team']} vs {m['away_team']}\")\n",
    "            print(f\"    ‚Üí Pick: {m['predicted_winner']} ({m['confidence']}/10)\")\n",
    "    else:\n",
    "        print(\"  No high confidence picks this round\")\n",
    "    \n",
    "    print(\"\\n‚öñÔ∏è CLOSE MATCHES (Confidence <= 4):\")\n",
    "    print(\"-\" * 50)\n",
    "    if close_matches:\n",
    "        for m in close_matches:\n",
    "            print(f\"  {m['home_team']} vs {m['away_team']}\")\n",
    "            print(f\"    ‚Üí Likely close game - consider under/over\")\n",
    "    else:\n",
    "        print(\"  No particularly close matches\")\n",
    "\n",
    "\n",
    "get_betting_insights(matches)"
   ]
