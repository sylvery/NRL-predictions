    "class AnytimeTryScorerPredictor:\n",
    "    \"\"\"Predict anytime try scorer probabilities for matches.\"\"\"\n",
    "    \n",
    "    def __init__(self, model, scaler, feature_names):\n",
    "        self.model = model\n",
    "        self.scaler = scaler\n",
    "        self.feature_names = feature_names\n",
    "    \n",
    "    def predict_match(self, home_team, away_team, model=None):\n",
    "        \"\"\"\n",
    "        Predict anytime try scorer probabilities for a match.\n",
    "        \n",
    "        Returns dict of player probabilities (placeholder - needs player-specific data).\n",
    "        \"\"\"\n",
    "        # Placeholder: return team-level probabilities\n",
    "        # In production, you'd use player-specific features\n",
    "        features = self._create_team_features(home_team, away_team)\n",
    "        scaled = self.scaler.transform([features])\n",
    "        \n",
    "        home_prob = self.model.predict_proba(scaled)[0, 1]\n",
    "        away_prob = 1 - home_prob\n",
    "        \n",
    "        return {\n",
    "            'home_team_prob': home_prob,\n",
    "            'away_team_prob': away_prob,\n",
    "            'expected_total_tries': home_prob + away_prob,\n",
    "            'prediction': home_team if home_prob > away_prob else away_team\n",
    "        }\n",
    "    \n",
    "    def _create_team_features(self, home_team, away_team):\n",
    "        \"\"\"Create feature vector for two teams.\"\"\"\n",
    "        # Simplified features\n",
    "        return [\n",
    "            0.4,  # Team try rate (placeholder)\n",
    "            0.4,  # Opponent try conceded (placeholder)\n",
    "            1.0,  # Home advantage\n",
    "            1.0,  # Avg points scored\n",
    "            1.0,  # Avg points conceded\n",
    "        ]\n",
    "\n",
    "\n",
    "# Create predictor\n",
    "best_model_name = max(results, key=lambda x: results[x]['roc_auc'])\n",
    "best_model = results[best_model_name]['model']\n",
    "\n",
    "predictor = AnytimeTryScorerPredictor(\n",
    "    model=best_model,\n",
    "    scaler=scaler,\n",
    "    feature_names=['team_try_rate', 'opp_try_conceded', 'home_adv', 'avg_points_scored', 'avg_points_conceded']\n",
    ")\n",
    "\n",
    "print(f\"‚úÖ Predictor created using {best_model_name}\")"
   ]
