    "def save_fixtures(matches, year=2026, round_num=None):\n",
    "    \"\"\"Save fixtures to JSON file.\"\"\"\n",
    "    import json\n",
    "    \n",
    "    output_file = f\"../data/nrl_fixtures_{year}_round{round_num}.json\"\n",
    "    \n",
    "    with open(output_file, 'w') as f:\n",
    "        json.dump({\n",
    "            'year': year,\n",
    "            'round': round_num,\n",
",
    "            'generated': datetime.now().isoformat(),\n",
    "            'matches': matches\n",
    "        }, f, indent=2)\n",
    "    \n",
    "    logger.info(f\"Saved fixtures to {output_file}\")\n",
    "    return output_file\n",
    "\n",
    "\n",
    "# Save fixtures\n",
    "if matches:\n",
    "    save_fixtures(matches, YEAR, CURRENT_ROUND)\n",
    "    print(f\"‚úÖ Fixtures saved!\")"
   ]
