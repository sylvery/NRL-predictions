    "def display_matches(matches):\n",
    "    \"\"\"Display upcoming matches in a formatted table.\"\"\"\n",
    "    if not matches:\n",
    "        print(\"‚ö†Ô∏è No matches found for this round\")\n",
    "        return\n",
    "    \n",
    "    print(\"\\n\" + \"=\"*70)\n",
    "    print(f\"üèâ NRL ROUND {matches[0]['round']} - UPCOMING MATCHES\")\n",
    "    print(\"=\"*70 + \"\\n\")\n",
    "    \n",
    "    for i, match in enumerate(matches, 1):\n",
    "        print(f\"MATCH {i}:\")\n",
    "        print(\"-\" * 40)\n",
    "        print(f\"  üè† HOME:    {match['home_team']}\")\n",
    "        print(f\"  ‚úàÔ∏è AWAY:     {match['away_team']}\")\n",
    "        print(f\"  üìç VENUE:   {match['venue']}\")\n",
    "        print(f\"  üïê KICKOFF: {match['kickoff']}\")\n",
    "        print(f\"  üîó LINK:    {match['match_centre']}\")\n",
    "        print(f\"  üìä STATUS:  {match['status']}\")\n",
    "        print(\"\")\n",
    "\n",
    "\n",
    "display_matches(matches)"
   ]
