    "def get_match_prediction(home_team, away_team):\n",
    "    \"\"\"\n",
    "    Get ML prediction for a match.\n",
    "\n",
    "Note: This uses a simple heuristic based on team strength.\n",
    "In production, you would load the trained model from model_1.ipynb.\n",
    "    \"\"\"\n",
    "    # Simple strength ratings (replace with model predictions in production)\n",
    "    team_ratings = {\n",
    "        \"Panthers\": 90, \"Storm\": 88, \"Roosters\": 85,\n",
    "        \"Rabbitohs\": 82, \"Broncos\": 80, \"Eels\": 78,\n",
    "        \"Sharks\": 76, \"Sea Eagles\": 74, \"Raiders\": 72,\n",
    "        \"Bulldogs\": 70, \"Cowboys\": 68, \"Knights\": 66,\n",
    "        \"Dragons\": 64, \"Wests Tigers\": 62, \"Dolphins\": 60,\n",
    "        \"Titans\": 58, \"Warriors\": 56\n",
    "    }\n",
    "    \n",
    "    home_rating = team_ratings.get(home_team, 65)\n",
    "    away_rating = team_ratings.get(away_team, 65)\n",
    "    \n",
    "    # Home advantage boost\n",
    "    home_rating += 5\n",
    "    \n",
    "    # Calculate probabilities\n",
    "    total = home_rating + away_rating\n",
    "    home_prob = home_rating / total\n",
    "    away_prob = away_rating / total\n",
    "    \n",
    "    # Predicted margin\n",
    "    margin = (home_rating - away_rating) * 0.5\n",
    "    \n",
    "    return {\n",
    "        \"home_win_prob\": home_prob,\n",
    "        \"away_win_prob\": away_prob,\n",
    "        \"predicted_margin\": round(margin, 1),\n",
    "        \"confidence\": round(abs(home_prob - 0.5) * 2, 1),\n",
    "        \"predicted_winner\": home_team if home_prob > 0.5 else away_team\n",
    "    }\n",
    "\n",
    "\n",
    "def display_predictions(matches):\n",
    "    \"\"\"Display matches with ML predictions.\"\"\"\n",
    "    print(\"\\n\" + \"=\"*70)\n",
    "    print(\"ü§ñ ML PREDICTIONS\")\n",
    "    print(\"=\"*70 + \"\\n\")\n",
    "    \n",
    "    for i, match in enumerate(matches, 1):\n",
    "        pred = get_match_prediction(match['home_team'], match['away_team'])\n",
    "        \n",
    "        print(f\"MATCH {i}: {match['home_team']} vs {match['away_team']}\")\n",
    "        print(\"-\" * 50)\n",
    "        print(f\"  üèÜ Predicted Winner: {pred['predicted_winner']}\")\n",
    "        print(f\"  üìä Confidence: {pred['confidence']}/10\")\n",
    "        print(f\"  üéØ {match['home_team']} Win: {pred['home_win_prob']:.1%}\")\n",
    "        print(f\"  üéØ {match['away_team']} Win: {pred['away_win_prob']:.1%}\")\n",
    "        print(f\"  üìè Predicted Margin: {abs(pred['predicted_margin']):.1f} points\")\n",
    "        print(\"\")\n",
    "\n",
    "\n",
    "display_predictions(matches)"
   ]
  },
