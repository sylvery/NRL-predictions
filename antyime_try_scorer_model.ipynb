    "        return data\n",
    "    except FileNotFoundError:\n",
    "        logger.warning(f\"‚ö†Ô∏è Match data not found for {year}\")\n",
    "        return None\n",
    "\n",
    "\n",
    "def load_detailed_match_data(year):\n",
    "    \"\"\"Load detailed match data with try scoring info for a given year.\"\"\"\n",
    "    try:\n",
    "        with open(f'./data/nrl_detailed_match_data_{year}.json', 'r') as f:\n",
    "            data = json.load(f)\n",
    "        logger.info(f\"‚úÖ Loaded detailed match data for {year}\")\n",
    "        return data\n",
    "    except FileNotFoundError:\n",
    "        logger.warning(f\"‚ö†Ô∏è Detailed match data not found for {year}\")\n",
    "        return None\n",
    "\n",
    "\n",
    "def load_player_data(year):\n",
    "    \"\"\"Load player statistics for a given year.\"\"\"\n",
    "    try:\n",
    "        with open(f'./data/nrl_player_statistics_{year}.json', 'r') as f:\n",
